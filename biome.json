{
  "$schema": "./node_modules/@biomejs/biome/configuration_schema.json",
  "extends": ["ultracite/biome/core", "ultracite/biome/next"],
  "javascript": {
    "formatter": {
      "lineWidth": 100,
      "quoteStyle": "double"
    }
  },
  "linter": {
    "rules": {
      "suspicious": {
        "noShadowRestrictedNames": "off",
        "noExplicitAny": "off"
      },
      "nursery": {
        "useConsistentArrowReturn": "off",
        "noShadow": "off"
      }
    }
  }
}
