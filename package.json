{
  "name": "workspace",
  "private": true,
  "packageManager": "bun@1.3.3",
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "start": "turbo run start",
    "clean": "git clean -xdf node_modules .turbo",
    "clean:workspaces": "turbo run clean",
    "check": "bun ultracite check",
    "fix": "bun ultracite fix",
    "db:push": "turbo run db:push --filter=@workspace/db",
    "db:studio": "turbo run db:studio --filter=@workspace/db"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.8",
    "@types/bun": "latest",
    "prettier": "3.6.2",
    "turbo": "^2.6.1",
    "ultracite": "^6.3.8"
  },
  "workspaces": [
    "apps/*",
    "packages/*"
  ]
}
